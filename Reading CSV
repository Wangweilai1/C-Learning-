using System;using System.Collections.Generic;using System.ComponentModel;using System.Data;using System.Drawing;using System.IO;using System.Linq;using System.Text;using System.Windows.Forms;namespace ReacCSV{    public partial class Form1 : Form    {        public Form1()        {            InitializeComponent();        }         private List<string> file_contact = new List<string>();        private string filePath;        private void OpenCSV_Click(object sender, EventArgs e)        {            OpenFileDialog fileCSV = new OpenFileDialog();            fileCSV.Title = "Select CSV File";            fileCSV.Filter = "CSV File|*.csv";            if (fileCSV.ShowDialog() == DialogResult.OK)            {                filePath = fileCSV.FileName;                textBox1.Text = filePath;                textBox1.Show();                //read the CSV file content.                readCSV_Text(filePath);            }            return;        }        private void button1_Click(object sender, EventArgs e)        {            //read the CSV file content.            getCSV_Value();        }        private void readCSV_Text(string filePath)        {            FileStream fs = null;            try            {                fs = new FileStream(filePath, System.IO.FileMode.Open, System.IO.FileAccess.Read);            }            catch            {                MessageBox.Show("Open the CSV file is fail!");                return;            }            StreamReader sr = new StreamReader(fs, Encoding.UTF8);            string strLine = "";            //Reading the data in CSV.            while ((strLine = sr.ReadLine()) != null)            {                file_contact.Add(strLine);            }            sr.Close();            fs.Close();                    }        private void getCSV_Value()        {            if (string.IsNullOrEmpty(filePath))            {                MessageBox.Show("Please select CSV file!");                return;            }            if (string.IsNullOrEmpty(textBox2.Text))            {                MessageBox.Show("Please input Row!");                return;            }            if (string.IsNullOrEmpty(textBox3.Text))            {                MessageBox.Show("Please input column!");                return;            }            //Total number of Row.            int Row = Convert.ToInt32(textBox2.Text) - 1;            if (Row >= file_contact.Count)            {                string message = "Please input Row less than " + file_contact.Count.ToString() + "!";                MessageBox.Show(message, "Line Error");                return;            }            //Total numbof of column.            int column = Convert.ToInt32(textBox3.Text) - 1;            string line_3 = file_contact[Row];            string[] Cells = line_3.Split(',');            if (column >= Cells.Count())            {                string message = "Please input Column less than " + Cells.Count().ToString() + "!";                MessageBox.Show(message, "Column Error");                return;            }            string result = Cells[column];            textBox4.Text = result;            textBox4.Show();        }    }}
